{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"lib": ["es2023"],
		"module": "node16",
		"moduleResolution": "node16",
		"target": "es2022",
		"forceConsistentCasingInFileNames": true,
		"outDir": "${configDir}/dist/node"
	},
	"include": ["./**/*.ts"],
	"exclude": ["test/*", "./dist/*"],
}
