{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"lib": ["dom", "es2023"],
		"module": "es2022",
		"moduleResolution": "bundler",
		"target": "es2022",
		"jsx": "react-jsx",
		"noEmitOnError": true,
		"outDir": "${configDir}/dist/browser",
	},
	"include": [ "web/**/*.tsx", "web/**/*.ts", "messages.ts", "package.json" ],
}
