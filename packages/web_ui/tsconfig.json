{
	"include": [ "src/**/*.tsx", "src/**/*.ts", "package.json", "global.d.ts" ],
	"compilerOptions": {
		"jsx": "react",
		"lib": ["dom", "es2023"],
		"module": "commonjs",
		"target": "es2022",
		"rootDir": "./",
		"outDir": "dist",
		"composite": true,
		"sourceMap": true,
		"strict": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"noEmitOnError": true
	}
}
